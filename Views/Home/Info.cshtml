@{
    ViewBag.Title = "Info";
}

@section scripts {
    <script type="text/javascript">
    $(window).on('load', function () {
        if (@ViewBag.LoginVirhe == 1) {
            $('#LoginRuutu').modal('show');
        }
    });

    </script>

    @{
        Html.RenderPartial("_LoginModal");
    }
}

<style>
    div {
        padding-left: 1em;
        padding-right: 1em;
        padding-top: 1em;
    }

    iframe.kartta {
        width: 100%;
        height: 20em;
    }

    h2 {
        text-align: center;
        color: #593196;
    }

    img.logot {
        width: 15em;
        place-content: center;
    }

    div.container {
        background-color: #DED6EA;
        border: 1px solid black;
    }

    .ikonit {
        display: flex;
        text-align: left;
    }

    .teksti {
        display: block;
        padding-left: 1em;
    }
</style>
